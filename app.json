{
  "name": "n8n",
  "description": "n8n workflow automation tool",
  "repository": "https://github.com/n8n-io/n8n",
  "logo": "https://raw.githubusercontent.com/n8n-io/n8n/master/assets/n8n-logo.png",
  "keywords": ["automation", "workflow", "productivity", "nocode"],
  "stack": "container",
  "env": {
    "N8N_ENCRYPTION_KEY": {
      "description": "Encryption key for n8n. Generate a random string.",
      "generator": "secret"
    },
    "WEBHOOK_URL": {
      "description": "The webhook URL for n8n. Should be https://YOUR_APP_NAME.herokuapp.com/",
      "required": true
    },
    "N8N_BASIC_AUTH_ACTIVE": {
      "description": "Whether to activate basic auth",
      "value": "true"
    },
    "N8N_BASIC_AUTH_USER": {
      "description": "Basic auth username",
      "value": "admin"
    },
    "N8N_BASIC_AUTH_PASSWORD": {
      "description": "Basic auth password. Change this!",
      "value": "password"
    },
    "GENERIC_TIMEZONE": {
      "description": "Timezone",
      "value": "Europe/Moscow"
    },
    "DB_TYPE": {
      "description": "Database type",
      "value": "postgresdb"
    },
    "DB_POSTGRESDB_HOST": {
      "description": "PostgreSQL host (will be set by Heroku)",
      "required": false
    },
    "DB_POSTGRESDB_PORT": {
      "description": "PostgreSQL port (will be set by Heroku)",
      "required": false
    },
    "DB_POSTGRESDB_DATABASE": {
      "description": "PostgreSQL database name (will be set by Heroku)",
      "required": false
    },
    "DB_POSTGRESDB_USER": {
      "description": "PostgreSQL username (will be set by Heroku)",
      "required": false
    },
    "DB_POSTGRESDB_PASSWORD": {
      "description": "PostgreSQL password (will be set by Heroku)",
      "required": false
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "buildpacks": [],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  }
} 